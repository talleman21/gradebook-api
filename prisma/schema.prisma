generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Assignment {
  id           String    @id @default(cuid())
  name         String
  grade        Decimal
  description  String
  dueDate      DateTime
}

model Curriculum {
  id         String @id @default(cuid())
  name       String
}

model Student {
  id        String    @id @default(cuid())
  name      String
  subjects  Subject[]
}

model Subject {
  id         String @id @default(cuid())
  name       String
  students    Student[]
}