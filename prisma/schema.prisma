generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Instructor {
  id String @id @default(cuid())
  name String
  students Student[]
}

model Student {
  id        String    @id @default(cuid())
  name      String
  subjects  Subject[]
  instructors Instructor[]
}

model Subject {
  id         String @id @default(cuid())
  name       String
  students    Student[]
  curriculums  Curriculum[]
}

model Curriculum {
  id         String @id @default(cuid())
  name       String
  subject    Subject @relation(fields: [subjectId],references: [id])
  subjectId  String
  assignments Assignment[]
}

model Assignment {
  id           String    @id @default(cuid())
  name         String
  grade        Int
  description  String
  dueDate      DateTime
  curriculum   Curriculum @relation(fields: [curriculumId],references: [id])
  curriculumId  String
}


